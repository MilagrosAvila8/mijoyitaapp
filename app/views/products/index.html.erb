
<h1 class="text-center mt-4 mb-5 rounded">Nuestros Productos</h1>

<% if @products.any? %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <%= link_to product, class:"text-decoration-none text-dark" do %>
            <% unless product.photo.url.nil? %>
              <%= cl_image_tag(product.photo.key, class: 'card-img-top img-fluid', alt: product.name, style: 'object-fit: cover; height: 200px;') %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name.capitalize %></h5>
              <p class="card-text">Precio: S/ <%= product.price %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center">No se encontraron coincidencias.</p>
  <h2 class="text-center mt-5 mb-4">Otros Productos</h2>
  <div class="text-center mb-4">
    <%= link_to "Ir a productos", products_path, class:"btn btn-outline-primary" %>
  </div>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <%= link_to product, class:"text-decoration-none text-dark" do %>
            <% unless product.photo.url.nil? %>
              <%= cl_image_tag(product.photo.key, class: 'card-img-top img-fluid', alt: product.name, style: 'object-fit: cover; height: 200px;') %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name.capitalize %></h5>
              <p class="card-text">Precio: S/ <%= product.price %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
